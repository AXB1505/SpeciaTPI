<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chronometrage.Pages.ChronoManage"
             Style="{StaticResource PagesStyle}">
    <Grid RowDefinitions="*,*">
        <Grid RowDefinitions="3*,1*" BackgroundColor="Red" Padding="20">
            <Label Grid.Row="0" Text="00:00" FontSize="300"></Label>
            <Label Grid.Row="1" WidthRequest="400" Text="00:00" FontSize="100"></Label>
        </Grid>
        <Grid Grid.Row="2" BackgroundColor="Blue"/>
    </Grid>
</ContentPage>